//array tutorial
let books=['lord of the rings','little women','the red queen']

// add at the beginning 
books.unshift('the hobbit')
console.log(books)

//add at the end
books.push('silmarillion')
console.log(books)

//delete an elemnet at the beginning
books.shift()
console.log(books)

//delete at the end 
books.pop()
console.log(books)

//delete an element using splice function
books.splice(2,1)    //here 2 is the index of the element to delete and 1 is the number of the elements to delete
console.log(books)
